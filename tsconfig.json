{
  "compilerOptions": {
    "target": "es2021", // Define a versão do ECMAScript de destino
    "module": "commonjs", // Usa o sistema de módulos CommonJS
    "outDir": "./dist", // Pasta de saída para os arquivos compilados
    "rootDir": "./src", // Pasta raiz dos arquivos de código-fonte
    "strict": true, // Habilita todas as verificações de tipo estritas
    "esModuleInterop": true, // Permite interoperabilidade com módulos CommonJS
    "skipLibCheck": true, // Pula a verificação de tipos de arquivos de declaração
    "forceConsistentCasingInFileNames": true, // Garante a consistência de maiúsculas e minúsculas nos nomes de arquivo
    "resolveJsonModule": true // Permite a importação de arquivos .json
  },
  "include": ["src/**/*"], // Inclui todos os arquivos dentro da pasta src
  "exclude": ["node_modules"] // Exclui a pasta node_modules da compilação
}
